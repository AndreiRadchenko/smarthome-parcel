{{#each this}}
  <li class='gallery__item'>
    <div class='img-wrap'>
      <img class='gallery__iframe' src='{{preview}}' alt='{{title}}' />
    </div>
    <div class='gallery__text-wrap'>
      <h3 class='gallery__title'>"{{galleryTitle}}"</h3>
      <p class='gallery__text'>"{{galleryText}}"
      </p>
    </div>
  </li>
{{/each}}

